---
import cv from "../data/cv.json";
---
<section id="cv" class="section">
<h2 class="heading mb-8">CV</h2>

<ol class="relative border-s border-white/10 ps-4">
{cv.timeline.map((item) => (
<li class="mb-8 ms-4">
<div class="absolute w-3 h-3 bg-brand rounded-full -start-1.5 mt-1.5">
</div>
<time class="subtle">{item.dates}</time>
<h3 class="text-xl font-semibold mt-1">{item.title}</h3>
{item.org && <p class="opacity-80">{item.org}</p>}
<ul class="list-disc ms-5 mt-2 opacity-90">
{item.bullets.map((b) => <li>{b}</li>)}
</ul>
</li>
))}
</ol>

<div class="mt-6">
<a class="button" href="/cv">Ver versi√≥n imprimible</a>
</div>
</section>