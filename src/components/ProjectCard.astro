---
interface Props {
  name: string;
  description?: string | null;
  html_url: string;
  homepage?: string | null;
  stars?: number;
  language?: string | null;
}
const { name, description, html_url, homepage, stars = 0, language } = Astro.props as Props;

// Colores por lenguaje
const languageColors: Record<string, string> = {
  'JavaScript': 'bg-yellow-400',
  'TypeScript': 'bg-blue-500',
  'React': 'bg-cyan-400',
  'Python': 'bg-green-500',
  'Java': 'bg-red-500',
  'HTML': 'bg-orange-500',
  'CSS': 'bg-blue-400',
  'Astro': 'bg-orange-600',
};

const languageColor = language ? languageColors[language] || 'bg-gray-400' : 'bg-gray-400';
---
<article class="card group relative overflow-hidden">
  <!-- Efecto de brillo en hover -->
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
  
  <div class="relative flex flex-col gap-4 h-full">
    <!-- Header mejorado -->
    <header class="space-y-2">
      <div class="flex items-start justify-between gap-2">
        <h3 class="text-lg font-semibold text-zinc-100 transition-colors group-hover:text-[#10B981]">
          <a href={html_url} target="_blank" rel="noreferrer" class="hover:underline">
            {name}
          </a>
        </h3>
        {language && (
          <div class="flex items-center gap-1 px-2 py-1 rounded-full bg-zinc-800/50 border border-zinc-700">
            <div class={`w-2 h-2 rounded-full ${languageColor}`}></div>
            <span class="text-xs text-zinc-400 font-medium">{language}</span>
          </div>
        )}
      </div>
      {description && (
        <p class="text-sm text-zinc-400 leading-relaxed line-clamp-2">
          {description}
        </p>
      )}
    </header>

    <!-- Estadísticas -->
    <div class="flex items-center gap-4 text-sm text-zinc-500">
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <span>{stars}</span>
      </div>
      <div class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
        <span>Código</span>
      </div>
    </div>

    <!-- Botones mejorados -->
    <div class="flex gap-2 mt-auto pt-2">
      <a class="button secondary group/btn flex-1 justify-center text-sm" 
         href={html_url} target="_blank" rel="noreferrer">
        <svg class="w-4 h-4 transition-transform group-hover/btn:rotate-12" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
        </svg>
        Repo
      </a>
      {homepage && (
        <a class="button group/btn flex-1 justify-center text-sm" 
           href={homepage} target="_blank" rel="noreferrer">
          <svg class="w-4 h-4 transition-transform group-hover/btn:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Demo
        </a>
      )}
    </div>
  </div>
</article>